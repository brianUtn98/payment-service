{
    "defaultSeverity": "error",
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "./build",
        "strict": true,
        "skipLibCheck": true,
        "rootDir": "./",
        "forceConsistentCasingInFileNames": true,
        "baseUrl": ".",
        "lib": [
            "es5","es6","dom","dom.iterable"
          ]
      },
      "exclude": ["node_modules", "**/*.test.ts", "__tests__"]
